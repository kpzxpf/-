<Window x:Class="MedCentre.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedCentre"
        mc:Ignorable="d"
        Title="Просмотр заказа"
        Height="700"
        Width="800"
        Background="{StaticResource SecondaryBackgroundBrush}"
        FontFamily="Poppins"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Заказа"
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Margin="0,0,0,20"/>
        
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Информация о заказе"
                           Style="{StaticResource SubheaderTextBlockStyle}"
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ФИО клиента: "
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding CustomerName}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Номер заказа: "
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding OrderNumber}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Дата заказа: "
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding OrderDate, StringFormat='dd.MM.yyyy'}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ListView Grid.Row="2"
                  x:Name="OrderItemsListView"
                  ItemsSource="{Binding OrderItems}"
                  Background="{StaticResource BackgroundBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1"
                  HorizontalContentAlignment="Stretch"
                  Margin="0,0,0,15">
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="15"
                            CornerRadius="5"
                            Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Width="100"
                                    Height="100">
                                <Image Source="{Binding Image}"
                                       Stretch="Uniform"
                                       Margin="5"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProductName}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Бренд: " 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Brand}"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Цена за единицу: " 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DiscountedPrice, StringFormat='{}{0:N2} руб.'}"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2" 
                                           Visibility="{Binding Discount, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Скидка: " 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Discount, StringFormat='{}{0}%'}"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                    <TextBlock Text="Количество: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"/>
                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                             Width="50"
                                             TextAlignment="Center"
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>
                                <TextBlock Text="{Binding TotalPrice, StringFormat='Итого: {0:N2} руб.'}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,5"/>
                            </StackPanel>

                            <!-- Кнопка удаления -->
                            <Button Grid.Column="3"
                                    Content="✕"
                                    Background="Red"
                                    Foreground="White"
                                    Width="30"
                                    Height="30"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Click="RemoveItem_Click"
                                    Tag="{Binding ProductId}"
                                    ToolTip="Удалить товар"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Итоговая информация -->
        <Border Grid.Row="3"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Общая сумма: "
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N2} руб.'}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Размер скидки: "
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding DiscountAmount, StringFormat='{}{0:N2} руб.'}"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="К оплате: "
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding FinalAmount, StringFormat='{}{0:N2} руб.'}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Пункт выдачи: "
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding PickupPoint}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Срок доставки: "
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding DeliveryDays, StringFormat='{}{0} дней'}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Код получения: "
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding PickupCode}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить талон (PDF)"
                    Click="SaveReceipt_Click"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"/>
            <Button Content="Оформить заказ"
                    Click="CreateOrder_Click"
                    Background="Green"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"/>
            <Button Content="Закрыть"
                    IsCancel="True"
                    Click="Close_Click"
                    Background="{StaticResource TextSecondaryBrush}"
                    Foreground="White"
                    Padding="15,8"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
