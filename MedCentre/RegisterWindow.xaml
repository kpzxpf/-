<Window x:Class="MedCentre.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Зеленый Рай - Авторизация" Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        FontFamily="Poppins">
    <Grid Background="#F8F9FA">
        <StackPanel MaxWidth="320" Margin="0,30,0,0">
            <TextBlock Text="Зеленый Рай" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{StaticResource AccentBrush}"/>
            <TextBlock Text="Регистрация" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#444"/>
            
            <StackPanel>
                <TextBlock Text="Имя:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="name" Margin="0,0,0,15" />
                
                <TextBlock Text="Email:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="email" Margin="0,0,0,15" />
                
                <TextBlock Text="Логин:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="login" Margin="0,0,0,15" />
                
                <TextBlock Text="Пароль:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="password" Margin="0,0,0,20" />
                
                <TextBlock Text="Пароль:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="passwordRepet" Margin="0,0,0,20" />
                
                <TextBlock x:Name="error" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,15" Visibility="Collapsed"/>
                
                <Button x:Name="btnRegister" Content="Регистрация" Click="BtnRegister_Click" Margin="0,0,0,15"/>
                <Button x:Name="btnBack" Content="Назад" Click="BtnBack_Click" Background="Transparent" Foreground="#444" BorderBrush="#ddd" BorderThickness="1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>