<Window x:Class="MedCentre.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать товар" Height="800" Width="600"
        Background="{StaticResource SecondaryBackgroundBrush}"
        FontFamily="Poppins">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Добавить/Редактировать товар" Style="{StaticResource HeaderTextBlockStyle}"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Наименование товара:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="ProductNameTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Категория:" Style="{StaticResource LabelTextBlockStyle}"/>
            <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="CategoryName" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10">
            <TextBlock Text="Поставщик:" Style="{StaticResource LabelTextBlockStyle}"/>
            <ComboBox x:Name="SupplierComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10">
            <TextBlock Text="Бренд:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="BrandTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,10">
            <TextBlock Text="Цена:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="PriceTextBox" PreviewTextInput="NumberValidationTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,10">
            <TextBlock Text="Количество на складе:" Style="{StaticResource LabelTextBlockStyle}"/>
            <TextBox x:Name="QuantityTextBox" PreviewTextInput="IntegerValidationTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Margin="0,10">
            <TextBlock Text="Изображение:" Style="{StaticResource LabelTextBlockStyle}"/>
            <Image x:Name="ProductImage" Width="100" Height="100" Stretch="Uniform"/>
            <Button Content="Загрузить изображение" Click="UploadImage_Click" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Сохранить" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Name="DeleteButton" Content="Удалить" Click="Delete_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>